<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/dream_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_mood_happy" />

        <TextView
            android:id="@+id/dream_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dream_icon"
            android:text="Dream name"
            android:textColor="@color/dark_night_Blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dream_content_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dream_name"
            android:layout_toEndOf="@+id/dream_icon"
            android:textColor="@color/night_blue"
            android:text="Dream content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>